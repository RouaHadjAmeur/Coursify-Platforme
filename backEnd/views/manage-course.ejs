    // Delete lesson
    async function deleteLesson(lessonId) {
      if (!confirm('Are you sure you want to delete this lesson?')) return;
      
      try {
        const response = await fetch(`/api/courses/<%= course.id %>/lessons/${lessonId}`, {
          method: 'DELETE',
          credentials: 'include'
        });

        if (response.ok) {
          loadLessons();
          alert('Lesson deleted successfully!');
        } else {
          alert('Error deleting lesson');
        }
      } catch (error) {
        console.error('Error deleting lesson:', error);
        alert('Error deleting lesson');
      }
    }

    // Preview course
    function previewCourse(courseId) {
      window.open(`/course-learning/${courseId}`, '_blank');
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
      loadLessons();
    });

    document.getElementById('addLessonForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const title = document.getElementById('lessonTitle').value.trim();
      const description = document.getElementById('lessonDescription').value.trim();
      const courseId = '<%= course.id %>';
      const orderValue = document.getElementById('lessonOrder').value;
      const duration = document.getElementById('lessonDuration').value.trim();
      const status = document.getElementById('lessonStatus').value;

      // Validate required fields
      if (!title) {
        alert('Please enter a lesson title');
        return;
      }
      if (!description) {
        alert('Please enter a lesson description');
        return;
      }

      const lessonData = {
        title: title,
        description: description,
        courseId: courseId,
        order: orderValue ? parseInt(orderValue) : 0,
        duration: duration || '0 min',
        status: status || 'DRAFT'
      };

      try {
        // Create lesson in standalone lessons collection for consistency
        const response = await fetch('/api/lessons', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          credentials: 'include',
          body: JSON.stringify(lessonData)
        });

        if (response.ok) {
          closeAddLessonModal();
          loadLessons();
          alert('Lesson added successfully!');
        } else {
          const errorData = await response.json();
          console.error('Error adding lesson:', errorData);
          alert('Error adding lesson: ' + (errorData.message || response.statusText));
        }
      } catch (error) {
        console.error('Error adding lesson:', error);
        alert('Error adding lesson: ' + error.message);
      }
    });



