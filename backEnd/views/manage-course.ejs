          const resp = await fetch('/api/quizzes', { method:'POST', headers:{ 'Content-Type':'application/json' }, body: JSON.stringify(payload) });
          if (resp.ok){ closeQuickQuizModal(); await loadLessons(); alert('Quiz added'); }
