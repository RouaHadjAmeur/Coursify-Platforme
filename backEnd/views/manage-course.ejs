    // Edit lesson
    function editLesson(lessonId) {
      window.location.href = `/manage-lesson/${lessonId}`;
    }

    async function toggleLessonStatus(lessonId, currentStatus) {
      const order = ['DRAFT','PUBLISHED','ARCHIVED'];
      const next = currentStatus === 'DRAFT' ? 'PUBLISHED' : currentStatus === 'PUBLISHED' ? 'ARCHIVED' : 'DRAFT';
      try {
        const resp = await fetch(`/api/lessons/${lessonId}/status`, {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'include',
          body: JSON.stringify({ status: next })
        });
        if (resp.ok) {
          await loadLessons();
        } else {
          alert('Failed to update status');
        }
      } catch (e) {
        console.error(e);
        alert('Failed to update status');
      }
    }

    async function promptEditLesson(lessonId) {
      const title = prompt('New title (leave blank to keep)');
      const description = prompt('New description (leave blank to keep)');
      const order = prompt('Order (number, leave blank to keep)');
      const duration = prompt('Duration (leave blank to keep)');
      const payload = {};
      if (title) payload.title = title;
      if (description) payload.description = description;
      if (order) payload.order = parseInt(order);
      if (duration) payload.duration = duration;
      if (Object.keys(payload).length === 0) return;
      try {
        const resp = await fetch(`/api/lessons/${lessonId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'include',
          body: JSON.stringify(payload)
        });
        if (resp.ok) {
          await loadLessons();
          alert('Lesson updated');
        } else {
          alert('Failed to update lesson');
        }
      } catch (e) {
        console.error(e);
        alert('Failed to update lesson');
      }
    }

    // Manage lesson (chapters and quizzes)
    function manageLesson(lessonId) {
      window.location.href = `/manage-lesson/${lessonId}`;
    }

    // Quick Actions: select lesson then open respective manage page anchored to section
    function openSelectLessonFor(type) {
      if (!Array.isArray(lessons) || lessons.length === 0) {
        alert('Please add a lesson first.');
        return;
      }
      quickType = type;
      const ddl = document.getElementById('selectLessonDropdown');
      ddl.innerHTML = lessons.map(l => `<option value="${l.id}">${(l.title || '').trim() || l.id}</option>`).join('');
      document.getElementById('selectLessonModal').classList.remove('hidden');
    }

    function openQuickChapter(){ openSelectLessonFor('chapter'); }
    function openQuickQuiz(){ openSelectLessonFor('quiz'); }

    function closeSelectLessonModal(){
      document.getElementById('selectLessonModal').classList.add('hidden');
    }

    function proceedQuickAdd(){
      const lid = document.getElementById('selectLessonDropdown').value;
      closeSelectLessonModal();
      if (quickType === 'chapter') {
        document.getElementById('quickChapterLessonId').value = lid;
        document.getElementById('quickChapterModal').classList.remove('hidden');
      } else if (quickType === 'quiz') {
        document.getElementById('quickQuizLessonId').value = lid;
        document.getElementById('quickQuizModal').classList.remove('hidden');
      }
    }

    function closeQuickChapterModal(){ document.getElementById('quickChapterModal').classList.add('hidden'); }
    function closeQuickQuizModal(){ document.getElementById('quickQuizModal').classList.add('hidden'); }

    // Quick Chapter submit
    document.addEventListener('DOMContentLoaded', () => {
      const f = document.getElementById('quickChapterForm');
      if (f) f.addEventListener('submit', async (e) => {
        e.preventDefault();
        const payload = {
          title: document.getElementById('quickChapterTitle').value,
          lessonId: document.getElementById('quickChapterLessonId').value,
          order: parseInt(document.getElementById('quickChapterOrder').value) || 1,
          duration: document.getElementById('quickChapterDuration').value,
          isPublished: document.getElementById('quickChapterPublished').checked,
          sections: Array.from(document.querySelectorAll('#quickSectionsContainer > div')).map(div => {
            const type = div.querySelector('[data-s="type"]').value;
            const contentInput = div.querySelector('[data-s="content"]');
            const fileInput = div.querySelector('[data-s="file"]');
            let content = contentInput ? contentInput.value : '';
            if (fileInput && fileInput.files && fileInput.files[0]) {
              content = fileInput.files[0].name; // backend import can be added later; here we save name
            }
            return { type, content };
          })
        };
        try{
          const resp = await fetch('/api/chapters', { method:'POST', headers:{ 'Content-Type':'application/json' }, body: JSON.stringify(payload) });
          if (resp.ok){ closeQuickChapterModal(); await loadLessons(); alert('Chapter added'); }
          else alert('Error adding chapter');
        }catch(err){ console.error(err); alert('Error adding chapter'); }
      });
    });

    // Dynamic section builder
    function quickAddSection(){
