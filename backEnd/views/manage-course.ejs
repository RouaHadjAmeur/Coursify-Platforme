    function quickOnSectionTypeChange(sel){
      const wrap = sel.closest('div.border');
      if (!wrap) return;
      const type = sel.value;
      const contentInput = wrap.querySelector('[data-s="content"]');
      const fileInput = wrap.querySelector('[data-s="file"]');
      if (type === 'image' || type === 'audio' || type === 'pdf'){
        fileInput.classList.remove('hidden');
        contentInput.placeholder = 'Optional URL or description';
      } else {
        fileInput.classList.add('hidden');
        contentInput.placeholder = type === 'text' ? 'Text content' : 'Video URL (YouTube/Vimeo)';
      }
    }

