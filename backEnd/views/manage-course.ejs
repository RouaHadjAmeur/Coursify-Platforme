            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No lessons yet</h3>
            <p class="text-gray-600 mb-4">Start by adding your first lesson to this course.</p>
            <button onclick="addLesson()" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
              Add First Lesson
            </button>
          </div>
        `;
        return;
      }

      container.innerHTML = `
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lesson</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Content</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              ${lessons.map((lesson, index) => `
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-3">
                      <div class="flex-shrink-0 w-8 h-8 bg-lightblue/20 rounded-full flex items-center justify-center">
                        <span class="text-sm font-medium text-lightblue">${index + 1}</span>
                      </div>
                      <div>
                        <div class="font-medium text-gray-900">${lesson.title}</div>
                        <div class="text-sm text-gray-500">${lesson.description || 'No description'}</div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">${lesson.duration || '-'}</td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <div class="flex items-center gap-4">
                      <span>ðŸ“š ${('chaptersCount' in lesson ? lesson.chaptersCount : (lesson.chapters ? lesson.chapters.length : 0))} chapters</span>
                      <span>ðŸ§© ${('quizzesCount' in lesson ? lesson.quizzesCount : (lesson.quizzes ? lesson.quizzes.length : 0))} quizzes</span>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-2">
                      <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ${lesson.status === 'PUBLISHED' ? 'bg-emerald-100 text-emerald-800' : lesson.status === 'ARCHIVED' ? 'bg-gray-100 text-gray-800' : 'bg-amber-100 text-amber-800'}">
                        ${lesson.status || 'DRAFT'}
                      </span>
  <button onclick="toggleLessonStatus('${lesson.id}', '${lesson.status || 'DRAFT'}')" class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="Toggle Status">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" /></svg>
</button>                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-2">
                      <button onclick="editLesson('${lesson.id}')" class="p-2 text-gray-400 hover:text-emerald-600 hover:bg-emerald-50 rounded-lg transition-colors" title="Edit Lesson">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
                      </button>
                  <button onclick="promptEditLesson('${lesson.id}')" class="p-2 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="Quick Edit">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536M4 13v7h7l9-9a2.5 2.5 0 10-3.536-3.536L7.5 16.5 4 13z" /></svg>
                  </button>
                      <button onclick="manageLesson('${lesson.id}')" class="p-2 text-gray-400 hover:text-lightblue hover:bg-lightblue/10 rounded-lg transition-colors" title="Manage Lesson">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                      </button>
                      <button onclick="deleteLesson('${lesson.id}')" class="p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors" title="Delete Lesson">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                      </button>
                    </div>
                  </td>
                </tr>
              `).join('')}
            </tbody>
          </table>
        </div>
      `;
    }

    // Load lessons for this course
    async function loadLessons() {
      try {
        const response = await fetch('/api/lessons/course/<%= course.id %>', {
          credentials: 'include'
        });
        if (response.ok) {
          lessons = await response.json();
          // Ensure stable order by lesson.order
          if (Array.isArray(lessons)) {
            lessons.sort((a, b) => (a.order || 0) - (b.order || 0));
          }
          renderLessons();
        } else {
          console.error('Error loading lessons list');
          lessons = [];
          renderLessons();
        }
      } catch (error) {
        console.error('Error loading lessons:', error);
        lessons = [];
        renderLessons();
      }
    }

    function addLesson() {
      document.getElementById('addLessonModal').classList.remove('hidden');
